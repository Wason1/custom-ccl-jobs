SELECT
	E.ENCNTR_ID
	, D.PCT_CARE_TEAM_ID
	, P_PCT_MED_SERVICE_DISP = UAR_GET_CODE_DISPLAY(P.PCT_MED_SERVICE_CD)
	, P_PCT_TEAM_DISP = UAR_GET_CODE_DISPLAY(P.PCT_TEAM_CD)
	, E.UPDT_ID
	, D.UPDT_ID
	, P.UPDT_ID
	, D.BEG_EFFECTIVE_DT_TM

FROM
	ENCOUNTER   E
	, (LEFT JOIN DCP_SHIFT_ASSIGNMENT D ON (E.ENCNTR_ID = D.ENCNTR_ID))
	, (LEFT JOIN PCT_CARE_TEAM P ON (P.PCT_CARE_TEAM_ID = D.PCT_CARE_TEAM_ID))

PLAN E
	WHERE
	E.ENCNTR_ID = 48473078

JOIN D
	;WHERE 


JOIN P
	WHERE
	E.LOC_FACILITY_CD = P.FACILITY_CD

ORDER BY
	D.BEG_EFFECTIVE_DT_TM

WITH MAXREC = 100, NOCOUNTER, SEPARATOR=" ", FORMAT, TIME = 5